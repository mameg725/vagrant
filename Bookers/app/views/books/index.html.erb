<!DOCTYPE html>
<html>
<head>
	<title>WebCampBookendNew</title>
</head>
<body>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th></tr>

		<% @books.each do |book| %><tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book) , method: :delete, "data-confirm" => "本当に削除しますか？" %></td></tr><% end %></table>

	<h2>New book</h2>
		<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

		<h4>Title</h4>
			<%= f.text_field :title %>
		<h4>Body</h4>
			<%= f.text_area :body %><br>
		<%= f.submit 'Create Book', "data-confirm" => "この内容で投稿しますか？" %><% end %>

</body>
</html>