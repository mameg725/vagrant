<p id="notice"><%=  notice %></p>
<h2>New book</h2>
	<%= form_for(@book) do |f| %>
	<h4>Title</h4>
		<%= f.text_field :title %>
	<h4>Body</h4>
		<%= f.text_area :body %><br>
	<%= f.submit 'Update Book', "data-confirm" => "この内容に修正しますか？"  %><% end %>

	<%= link_to "Show", book_path(@book) %>
	<%= link_to "Back", books_path(@book) %>