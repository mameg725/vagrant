<p id="notice"><%=  notice %></p>
<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
	<div class="field"><label for="book_title">Title</label>
		<%= f.text_field :title %></div>
	<div class="field"><label for="book_title">Body</label>
		<%= f.text_area :body %></div>
	<div class="action"><%= f.submit 'Update Book', "data-confirm" => "この内容に修正しますか？"  %></div><% end %>

	<%= link_to "Show", book_path(@book) %>
